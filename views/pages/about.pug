        //-                   p #{skill}
                          
        script(type="text/x-template")#skills-list
          ul.skills-list 
              li.skills-list__item(v-for="skill in skills")
                  skills-row(
                      :skill="skill"
                  )
                    
        script(type="text/x-template")#skills-row
            .skills-row
                .skills-list__title {{skill.skillsGroup}}
                ul.skills
                    li.skills-list__item(v-for="(skillPercents, skillName) in skill.skills")
                        skill(
                            :skillName="skillName",
                            :skillPercents="skillPercents"
                        )

        script(type="text/x-template")#skill
            .skill
                svg(viewBox="0 0 100 100" preserveAspectRatio="none").skill__figure
                    circle(cx="50" cy="50" r="40").skill__circle.skill__circle_under
                    circle(cx="50" cy="50" r="40" ref="color-circle").skill__circle.skill__circle_above
                .skill__title {{ skillName }}



  section.contacts
    .contacts__underlay.google-map      
    .contacts__container
      .user-data    
        .user-data-title Contacts    
      .user-data__container
        ul.user-contacts-list
          li.user-contacts-list__item
            .contacts-cell
              +icon("skype", "contacts-cell__icon") 
              .contacts-cell__title #{skype}
          li.user-contacts-list__item
            a(href="mailto: `#{gmail}`" class="contacts-cell")
              +icon("envelope", "contacts-cell__icon") 
              .contacts-cell__title #{gmail}
          li.user-contacts-list__item
            a(href="tel:+`#{phone}`" class="contacts-cell")
              +icon("phone", "contacts-cell__icon") 
              .contacts-cell__title +1.512.543.6421
          li.user-contacts-list__item
            .contacts-cell
              +icon("map_marker", "contacts-cell__icon") 
              .contacts-cell__title #{city}   